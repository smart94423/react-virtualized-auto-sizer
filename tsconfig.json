{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015"],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest"]
  },
  "exclude": ["node_modules", "vendor"],
  "include": ["src"]
}
